package arreglo;
/*
1)Crear un arreglo de 100 elementos de tipo entero.
2)Asignar los numeros del 1000 al 1099 en dicho arreglo (utilizar los indices del 0 al 99)
3)Mostrar por pantalla todos los valores del arreglo comenzando del indice 99 al 0
*/
public class Arreglo {

	public static void main(String[] args) {
	
		int [] arreglo = new int [100];
		final int constante = 1000;
		for (int x = 0; x < arreglo.length; x++)
			arreglo[x] = x + constante;
		for(int x = 99; x >= 0; x--)
			System.out.println(arreglo[x]);
	}
}
